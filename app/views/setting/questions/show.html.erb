<p id="notice"><%= notice %></p>

<div class="thumbnail jumbotron">
  <div class="caption">
    <div class="question_title">
      <h2><%= image_tag "question_mark.png" %>&nbsp;<%= @question.title %></h2>
    </div>
    <hr>
    <div class="question_content">
      <p><%= simple_format @question.content %><p>
    </div>
    <div>
      <p><%= link_to 'Download', download_user_file_path(@question.user_file), class: "btn btn-primary btn-lg", role: "button" %></p>
    </div>
    <div>
      <%= form_tag same_password_setting_question_path @question, method: :post do %>
        <div class="field">
          <%= label_tag "Delete password" %>
          <%= password_field_tag :password %>
        </div>
        <div class="actions">
          <%= submit_tag "delete", class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>

<%= link_to 'Back', setting_questions_path %>
